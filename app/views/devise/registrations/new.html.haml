#signup
    .row
        .col-md-12.text-center
            %h1
                Sign Up
    .row
        .col-md-12
            .wrapper.clearfix
                = form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'login-container') do |f|
                    .form-group
                        %label.control-label.email.optional Email
                        = f.email_field :email, autofocus: true, class: "form-control keyput"
                    .form-group
                        %label.control-label.email.optional Password
                        = f.password_field :password, autocomplete: "off", class: "form-control keyput"
                    .form-group
                        %label.control-label.email.optional Password Confirmation
                        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control keyput"

                    .form-group.text-center
                        = f.submit "Log in to your account", class: "submit btn-default"
            .already-account.text-center
                = link_to 'Sign Up', new_user_registration_path